{
  "compilerOptions": {
    "target": "ES2020",                  // Modern JS features
    "module": "CommonJS",                // Compatible with ts-node without ESM headaches
    "rootDir": "./src",                  // Source files location
    "outDir": "./dist",                  // Compiled JS output
    "strict": true,                      // Enable all strict type checks
    "esModuleInterop": true,             // Allows default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true                    // For debugging
  },
  "include": ["src/**/*.ts"],            // Include all TS files under src
  "exclude": ["node_modules", "dist"]    // Exclude node_modules and dist
}
